<h1 class="center-screen">Add an ingredient to <%= link_to @cocktail.name, :anchor => 'form' %></h1>
<div class="center-screen" id="form">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <% if @dose.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :description %>
    <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
    <%= f.button :submit, 'Add!', class: "btn btn-primary" %>
    <%= link_to "Cancel", cocktail_path(@cocktail), class: "btn btn-primary" %>
  <% end %>
</div>
