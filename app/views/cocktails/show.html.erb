<h1> <%=@cocktail.name %> </h1>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to main menu", cocktails_path %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete ingredient", dose_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>

<%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete,
    data: { confirm: "Are you sure?" } %>
<%= link_to "Edit cocktail", edit_cocktail_path(@cocktail) %>
