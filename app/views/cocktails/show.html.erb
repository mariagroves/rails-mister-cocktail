<h1> <%=@cocktail.name %> </h1>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Deasdte ingredient", dose_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
